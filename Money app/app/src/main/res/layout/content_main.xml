<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_id"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_main"
        android:layout_width="357dp"
        android:layout_height="231dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp">
    </com.github.mikephil.charting.charts.PieChart>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_expenses_main"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:layout_below="@+id/pie_main"
        android:layout_alignStart="@+id/pie_main"
        android:layout_alignLeft="@+id/pie_main"
        android:layout_alignEnd="@+id/pie_main"
        android:layout_alignRight="@+id/pie_main"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp">
    </com.github.mikephil.charting.charts.BarChart>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_incomes_main"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:layout_below="@+id/bar_expenses_main"
        android:layout_alignStart="@+id/bar_expenses_main"
        android:layout_alignLeft="@+id/bar_expenses_main"
        android:layout_alignEnd="@+id/bar_expenses_main"
        android:layout_alignRight="@+id/bar_expenses_main"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"></com.github.mikephil.charting.charts.BarChart>

</RelativeLayout>